{
    "name": "codexr",
    "displayName": "CodeXR",
    "description": "The future of programming.",
    "version": "1.0.0",
    "license": "MIT",
    "publisher": "nekumelon",
    "repository": {
        "type": "git",
        "url": "https://github.com/nekumelon/CodeXR"
    },
    "engines": {
        "vscode": "^1.65.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "configuration": {
            "title": "codexr",
            "properties": {
                "codexr.realtime": {
                    "type": "boolean",
                    "default": true,
                    "description": "Completes code in realtime instead of on a keybind (Can be a little buggy without vscode Insider)"
                },
                "codexr.max_tokens": {
                    "type": "number",
                    "default": 500,
                    "description": "The max tokens to provide for the Codex"
                }
            }
        },
        "commands": [
            {
                "command": "codexr.query",
                "title": "Query"
            }
        ],
        "keybindings": [
            {
                "command": "codexr.query",
                "key": "cmd+enter",
                "mac": "cmd+enter"
            }
        ]
    },
    "scripts": {
        "lint": "eslint . --ext .js",
        "test": "mocha --reporter list",
        "package": "vsce package --out CodeXR.vsix"

    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.65.0",
        "@vscode/test-electron": "^2.1.2",
        "esbuild": "^0.14.30",
        "eslint": "^8.12.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2"
    },
    "dependencies": {
        "axios": "^0.26.1",
        "firebase": "^9.6.10",
        "gpt-3-encoder": "^1.1.3",
        "openai": "^2.0.5",
        "uuid": "^8.3.2"
    }
}
